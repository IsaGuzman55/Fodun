@model List<Fodun.Models.Sede>

    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css">
    <style>

        /* Opciones del nav */
        .option-btn {
            color: black;
            background-color: white;
            background-color: #ced4da;
            border: none;
            cursor: pointer;
        }
        .option-btn:focus, 
        .option-btn:hover {
            color: black;
            background-color: white;
        }

        .opcionInicio{
            color: #4c5053;
            background-color: white;
            border: none;
            cursor: pointer;
        }

        .opcionInicio:focus, 
        .opcionInicio:hover {
            color: white;
            background-color: #bf2f37;
        }

       
        /* Footer al final */
        footer {
            background-color: #bf2f37;
            color: white;
            text-align: center;
            font-family: Arial, sans-serif;
            position: relative;
            width: 100%;
            bottom: 0;
        }

    </style>
<body>
    <div class="content">
            <nav class="navbar bg-body-tertiary">
                <div class="container-fluid">
                    <!-- Contenido -->
                </div>
            </nav>
    
              <div class="container-fluid" style="background-color: #ced4da; width: 100vw; margin: 0px; padding: 0px; margin-left: 0px;">           
              <ul class="navega d-flex" style="list-style: none;;">
                <li class="me-3 "><a asp-action="Index" asp-controller="Sedes" style=" text-decoration: none;" class="btn-dark option-btn listOption">Sedes Recreativas y Apartamentos</a></li>
                <li class="me-3 listOption"><a asp-action="Login" asp-controller="Account" style=" text-decoration: none;" class="btn-dark option-btn listOption">Ingreso y registro</a></li>
              </ul>
        </div>

        <div class="titulo mt-3" style="margin:0px 90px 0px 250px;">
            <h4 class="text-start" style="color: #bf2f37;">Sedes Recreativas y Apartamentos</h4>
        </div>

        <div class="container mt-4">
            <div>
                <button class="opcionInicio" style="color: white; background-color: #bf2f37;">Sedes Recreativas y Apartamentos</button>
                <button class="opcionInicio">Seleccione sus Fechas</button>
            </div>
            <div class="" style="background-color: #bf2f37; height: 5px;" ></div>
            <div class="container-fluid" style="background-color: #e5e7e9; padding: 20px 20px 10px 20px;">
                <div class="">
                    <table class="table table-striped">
                            <thead class="table-light" >
                              <tr>
                                <th scope="col">img</th>
                                <th scope="col">Nombre</th>
                                <th scope="col">Descripción</th>
                                <th scope="col">Tipo</th>
                                <th scope="col">Ubicación</th>
                                <th scope="col">Seleccionar</th>
                              </tr>
                            </thead>
                            <tbody>
                            @foreach (var sede in Model){

                              <tr>
                                <td><img src="@Url.Content(@sede.Imagen)" alt="Imagen de @sede.Nombre" style="width: 150px;"></td>
                                <td>@sede.Nombre</td>
                                <td>@sede.Descripcion</td>
                                <td>@sede.Tipo</td>
                                <td>@sede.Ubicacion</td>
                                <td><a asp-controller="Sedes" asp-action="Detalles" asp-route-Id="@sede.SedeId" class="btn" style="background-color:#bf2f37; color: white; border-radius: 0px;">Seleccionar</a></td>
                              </tr>
                              
                             }
                            </tbody>
                      </table>
                </div>
            </div>
            
        </div>
    </div>
        

    
    <footer class="bg-body-tertiary mt-4">
        <div class="d-flex justify-content-center align-items-center p-2" style="background-color: #bf2f37;" id="footerContainer">          
            <p class="text-center text-white mb-0">FODUN - Fondo de Docentes Universidad Nacional - Derechos Reservados 
                <i class="bi bi-c-circle"></i> 2014 - Desarrollo por marketingSolutions S.A.S
            </p>          
        </div>
    </footer>
    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
