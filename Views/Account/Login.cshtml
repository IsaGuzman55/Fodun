@model Usuario
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css">
    <style>

        /* Opciones del nav */
        .option-btn {
            color: black;
            background-color: white;
            background-color: #ced4da;
            border: none;
            cursor: pointer;
        }
        .option-btn:focus, 
        .option-btn:hover {
            color: black;
            background-color: white;
        }

        /* Imagen principal */
        .imgInicio img {
            width: 100%;
            height: auto; 
        }

        .labelIngreso{
            font-size: 12px;
        }

        /* Sombra botones */
        button.btnRojo {
            background-color: #bf2f37; 
            border-radius: 12px; 
            border: none;
            padding: 10px 20px;
            font-size: 16px;
            box-shadow: inset 0px 3px 8px rgba(0, 0, 0, 0.4), 
                        3px 3px 6px rgba(0, 0, 0, 0.3); 
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
            transition: transform 0.2s;
        }
        button.btnRojo:hover {
            transform: scale(1.05);
        }

        button.btnGris {
            background-color: #d3d3d3; 
            border-radius: 12px; 
            color: black;
            border: none;
            padding: 10px 20px;
            font-size: 16px;
            box-shadow: inset 0px 3px 8px rgba(0, 0, 0, 0.2),
                        3px 3px 6px rgba(0, 0, 0, 0.3); 
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2); 
            transition: transform 0.2s;
        }
        button.btn-gris:hover {
            transform: scale(1.05);
        }

        /* Footer al final */
        footer {
            background-color: #bf2f37;
            color: white;
            text-align: center;
            font-family: Arial, sans-serif;
            position: relative;
            width: 100%;
            bottom: 0;
        }

    </style>
<body>
    <div class="content">

        <nav class="navbar bg-body-tertiary">
            <div class="container-fluid">
                <!-- Contenido -->
            </div>
        </nav>
    
       <div class="container-fluid" style="background-color: #ced4da; width: 100vw; margin: 0px; padding: 0px; margin-left: 0px;">           
              <ul class="navega d-flex" style="list-style: none;;">
                <li class="me-3 "><a asp-action="Index" asp-controller="Sedes" style=" text-decoration: none;" class="btn-dark option-btn listOption">Sedes Recreativas y Apartamentos</a></li>
                <li class="me-3 listOption"><a asp-action="Login" asp-controller="Account" style=" text-decoration: none;" class="btn-dark option-btn listOption">Ingreso y registro</a></li>
              </ul>
        </div>
        
        <div class="container mt-5">
            <div class="row">
                <!-- Columna de la imagen -->
                <div class="col-md-6">
                    <div class="imgInicio">
                        <img src="/img/bannerLogin.jpg" alt="Banner Login">
                    </div>
                </div>
        
                <!-- Columna del formulario -->
               
                <div class="col-md-6">
                    <div class="col-md-12">
                        <button class="btnGris btn border border-1 text-start fw-medium mt-3" style="width: 100%; max-width: 450px; height: 35px; padding: 0px 0px 0px 30px;">Ingreso Sistema de Reservas</button>
                        <p class="text-center mt-3" style="width: 400px;">Digite su Clave a través del teclado dinámico que se encuentra en la pantalla</p>
                        <div class="row">
                            <div class="col-md-6 d-flex flex-column align-items-end">

                                <form class="mt-3" asp-controller="Account" asp-action="Login" method="post">
                                    <div class="mb-3 d-flex justify-content-end">
                                        <label for="exampleInputEmail1" class="labelIngreso form-label fw-medium me-1" style="color: #bf2f37;">Nro Documento:  </label>
                                        <input  type="" class="form-control" id="exampleInputEmail1" style="width: 104px; height: 20px;" asp-for="Documento">
                                    </div>
                                    <div class="mb-3 d-flex justify-content-end">
                                        <label for="exampleInputPassword1" class="labelIngreso form-label fw-medium me-1" style="color: #bf2f37;">Clave:  </label>
                                        <input  type="password" class="form-control" id="exampleInputPassword1" style="width: 104px; height: 20px;" asp-for="Clave">
                                    </div>
                                    <div class="d-flex justify-content-end align-items-center me-3">
                                        <button  type="submit" class="btnRojo btn rounded-pill text-center border border-1 fw-medium" 
                                        style="height: 27px; width: 85px; background-color: #bf2f37; padding:0px; color: white;">Aceptar</button>
                                    </div>
                                    
                                    <div class="d-flex justify-content-end">
                                        <p class="fw-medium">¿Olvido su clave?</p>
                                    </div>
                                     @if(ViewData["ErrorMessage"]!= null){
                                    <div class="alert alert-danger" role="alert">
                                        @ViewData["ErrorMessage"]
                                    </div>
                                     }
                        
                                    
                                </form>
                            </div>
                            <div class="col-md-6">
                                <div class="col-md-12">
                                    <div class="row-md-3 d-flex">
                                        <button class="btnRojo rounded-pill text-center border border-1 fw-medium mb-1" style="height: 27px; width: 41px; background-color: #bf2f37; padding:0px; color: white;">5</button>
                                        <button class="btnRojo rounded-pill text-center border border-1 fw-medium mb-1" style="height: 27px; width: 41px; background-color: #bf2f37; padding:0px; color: white;">3</button>
                                        <button class="btnRojo rounded-pill text-center border border-1 fw-medium mb-1" style="height: 27px; width: 41px; background-color: #bf2f37; padding:0px; color: white;">7</button>                       
                                    </div>
                                    <div class="row-md-2 d-flex">
                                        <button class="btnRojo rounded-pill text-center border border-1 fw-medium mb-1" style="height: 27px; width: 41px; background-color: #bf2f37; padding:0px; color: white;">1</button>
                                        <button class="btnRojo rounded-pill text-center border border-1 fw-medium mb-1" style="height: 27px; width: 41px; background-color: #bf2f37; padding:0px; color: white;">9</button>
                                        <button class="btnRojo rounded-pill text-center border border-1 fw-medium mb-1" style="height: 27px; width: 41px; background-color: #bf2f37; padding:0px; color: white;">4</button>
    
                                    </div>
                                    <div class="row-md-2 d-flex">
                                        <button class="btnRojo rounded-pill text-center border border-1 fw-medium mb-1" style="height: 27px; width: 41px; background-color: #bf2f37; padding:0px; color: white;">6</button>
                                        <button class="btnRojo rounded-pill text-center border border-1 fw-medium mb-1" style="height: 27px; width: 41px; background-color: #bf2f37; padding:0px; color: white;">2</button>
                                        <button class="btnRojo rounded-pill text-center border border-1 fw-medium mb-1" style="height: 27px; width: 41px; background-color: #bf2f37; padding:0px; color: white;">0</button>
    
                                    </div class="row-md-2 d-flex">
                                        <button class="btnRojo rounded-pill text-center border border-1 fw-medium mb-1" style="height: 27px; width: 41px; background-color: #bf2f37; padding:0px; color: white;">8</button>
                                        <button class="btnRojo rounded-pill text-center border border-1 fw-medium mb-1" style="height: 27px; width: 84px; background-color: #bf2f37; padding:0px; color: white;">Limpiar</button>
                                    </div>
                                    <div>
                                        <p class="labelIngreso fw-medium" style="padding-left:40px;">Contraste</p>
                                    </div>
                                
                                    <div class="row-md-2 d-flex">
                                        <button class="btnRojo rounded-pill text-center border border-1 fw-medium mb-1" style="height: 27px; width: 41px; background-color: #bf2f37; padding:0px; color: white;"></button>
                                        <button class="btnRojo rounded-pill text-center border border-1 fw-medium mb-1" style="height: 27px; width: 41px; background-color: #bf2f37; padding:0px; color: white;"></button>
                                        <button class="btnRojo rounded-pill text-center border border-1 fw-medium mb-1" style="height: 27px; width: 41px; background-color: #bf2f37; padding:0px; color: white;"></button>                       
                                    </div>
                                
                                </div>
                            </div>                   
                        </div>
                        <div class="row d-flex flex-column mt-5">
                            <div class="imgRegistro d-flex align-items-center justify-content-center">
                                <a  class="d-inline-block" asp-action="Register" asp-controller="Account">
                                    <img src="/img/Sin título.png" style="width: 300px; cursor: pointer;" alt="Descripción de la imagen">
                                </a>
                            </div>

                        </div>
                        
                    </div>
                        
                </div>
            </div>
            
        </div>
    </div>
    <footer class="bg-body-tertiary mt-4">
        <div class="d-flex justify-content-center align-items-center p-2" style="background-color: #bf2f37;" id="footerContainer">          
            <p class="text-center text-white mb-0">FODUN - Fondo de Docentes Universidad Nacional - Derechos Reservados 
                <i class="bi bi-c-circle"></i> 2014 - Desarrollo por MarketingSolutions S.A.S
            </p>          
        </div>
    </footer>
    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>