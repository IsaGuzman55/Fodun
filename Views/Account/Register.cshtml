@model Fodun.Models.Usuario

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css">
    <style>

        /* Opciones del nav */
        .option-btn {
            color: black;
            background-color: white;
            background-color: #ced4da;
            border: none;
            cursor: pointer;
        }
        .option-btn:focus, 
        .option-btn:hover {
            color: black;
            background-color: white;
        }

        /* */
        .cuestionario{
            width: 350px;
            height: 25px;
            border-radius: 0px;
            box-shadow:0px 0px 5px 0px #000;
        }

        /* Footer al final */
        footer {
            background-color: #bf2f37;
            color: white;
            text-align: center;
            font-family: Arial, sans-serif;
            position: relative;
            width: 100%;
            bottom: 0;
        }

    </style>
<body>
    <div class="content">

        <nav class="navbar bg-body-tertiary">
            <div class="container-fluid">
                <!-- Contenido -->
            </div>
        </nav>
    
        <div class="container-fluid" style="background-color: #ced4da; width: 100vw; margin: 0px; padding: 0px; margin-left: 0px;">           
              <ul class="navega d-flex" style="list-style: none;;">
                <li class="me-3 "><a asp-action="Index" asp-controller="Sedes" style=" text-decoration: none;" class="btn-dark option-btn listOption">Sedes Recreativas y Apartamentos</a></li>
                <li class="me-3 listOption"><a asp-action="Login" asp-controller="Account" style=" text-decoration: none;" class="btn-dark option-btn listOption">Ingreso y registro</a></li>
              </ul>
        </div>

        <div class="titulo mt-3" style="margin:0px 90px 0px 250px;">
            <h4 class="text-start" style="color: #bf2f37;">Registro Nuevo Usuario</h4>
        </div>

        <div class="container mt-4">
            <div style="background-color: #bf2f37; color: white; height: 30px; width: 200px;">
                <p class="text-center">Registro Usuario</p>
            </div>
            <div class="" style="background-color: #bf2f37; height: 5px;" ></div>
            <div class="container-fluid" style="background-color: #e5e7e9;">
            <div class="container-fluid" style="background-color: #e5e7e9;">
        <form asp-controller="Account" asp-action="Register" method="post">
                    <div class="row">
                        <div class="col-md-6" style="padding: 0px 0px 0px 30px;">
                            <div class="mb-3 mt-4">
                                <label for="Documento" class="form-label fw-medium">Nro Documento:</label>
                                <input type="text" class="cuestionario form-control" id="Documento" asp-for="Documento" required>
                            </div>
                            <div class="mb-3">
                                <label for="Nombre" class="form-label fw-medium">Nombre Completo:</label>
                                <input type="text" class="cuestionario form-control" id="Nombre" asp-for="Nombre" required>
                            </div>
                            <div class="mb-3">
                                <label for="FechaNacimiento" class="form-label fw-medium">Fecha de Nacimiento:</label>
                                <input type="date" class="cuestionario form-control" id="FechaNacimiento" asp-for="FechaNacimiento" required>
                            </div>
                            <div class="mb-3">
                                <label for="Celular" class="form-label fw-medium">Celular:</label>
                                <input type="text" class="cuestionario form-control" id="Celular" asp-for="Celular">
                            </div>
                            <div class="mb-3">
                                <label for="Email" class="form-label fw-medium">Dirección Email:</label>
                                <input type="email" class="cuestionario form-control" id="Email" asp-for="Email" required>
                            </div>
                            <div class="mb-3">
                                <label for="Departamento" class="form-label fw-medium">Departamento:</label>
                                <input type="text" class="cuestionario form-control" id="Departamento" asp-for="Departamento" required>
                            </div>
                            <div class="mb-3">
                                <label for="Municipio" class="form-label fw-medium">Municipio:</label>
                                <input type="text" class="cuestionario form-control" id="Municipio" asp-for="Municipio" required>
                            </div>
                            <div class="mb-3">
                                <label for="Barrio" class="form-label fw-medium">Barrio:</label>
                                <input type="text" class="cuestionario form-control" id="Barrio" asp-for="Barrio" required>
                            </div>
                            <div class="mb-3">
                                <label for="Direccion" class="form-label fw-medium">Dirección Residencia:</label>
                                <input type="text" class="cuestionario form-control" id="Direccion" asp-for="Direccion" required>
                            </div>
                            <div class="mb-3">
                                <label for="Telefono" class="form-label fw-medium">Teléfono Residencia:</label>
                                <input type="text" class="cuestionario form-control" id="Telefono" asp-for="Telefono" required>
                            </div>
                        </div>

                        <div class="col-md-6" style="padding: 0px 30px 0px 0px;">
                            <div class="mb-3 mt-4">
                                <label for="PreguntaSecreta" class="form-label fw-medium">Pregunta Secreta:</label>
                                <select class="form-control" asp-for="PreguntaSecreta" id="PreguntaSecreta">
                                    <option value="">Seleccione una pregunta</option>
                                    <option value="¿Cuál es tu color favorito?">¿Cuál es tu color favorito?</option>
                                    <option value="¿Cómo se llamaba tu primera mascota?">¿Cómo se llamaba tu primera mascota?</option>
                                    <option value="¿Cuál es el nombre de tu mejor amigo de la infancia?">¿Cuál es el nombre de tu mejor amigo de la infancia?</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="RespuestaSecreta" class="form-label fw-medium">Respuesta Secreta:</label>
                                <input type="text" class="cuestionario form-control" id="RespuestaSecreta" asp-for="RespuestaSecreta" required>
                                <div id="emailHelp" class="form-text">Esta Se Utilizará para la Recuperación de la Clave</div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-medium">¿Autoriza el Envío de información al Correo?</label>
                                <div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="correo" id="correoSi" value="si">
                                        <label class="form-check-label" for="correoSi">Sí</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="correo" id="correoNo" value="no">
                                        <label class="form-check-label" for="correoNo">No</label>
                                    </div>
                                </div>
                            </div>

                            <!-- Autorización de Envío de Información al Celular -->
                            <div class="mb-3">
                                <label class="form-label fw-medium">¿Autoriza el Envío de información al Celular?</label>
                                <div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="celular" id="celularSi" value="si">
                                        <label class="form-check-label" for="celularSi">Sí</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="celular" id="celularNo" value="no">
                                        <label class="form-check-label" for="celularNo">No</label>
                                    </div>
                                </div>
                            </div>

                            <!-- Campos de Clave y Confirmación -->
                            <div class="mb-3 mt-4">
                                <label for="Clave" class="form-label fw-medium">Clave:</label>
                                <input type="password" class="cuestionario form-control" id="Clave" asp-for="Clave" required>
                            </div>
                           

                            <!-- Botón de Enviar -->
                            <div class="mb-3 mt-4">
                                <button type="submit" class="btn btn-primary">Enviar</button>
                                <button class="border border-dark-subtle rounded-3" style="width: 104px; height: 35px; margin: 0px;">cancelar</button>   
                            </div>
                        </div>
                    </div>
                </form>
</div>
</div>

 
          
        </div>
    </div>
        

    
    <footer class="bg-body-tertiary mt-4">
        <div class="d-flex justify-content-center align-items-center p-2" style="background-color: #bf2f37;" id="footerContainer">          
            <p class="text-center text-white mb-0">FODUN - Fondo de Docentes Universidad Nacional - Derechos Reservados 
                <i class="bi bi-c-circle"></i> 2014 - Desarrollo por MarketingSolutions S.A.S
            </p>          
        </div>
    </footer>
    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>